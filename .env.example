# pCloud Upload Pipeline Configuration
# Copy this file to .env and edit values for your system

# Base path for pipeline data (staging, uploads, failed, logs, DB)
PIPELINE_BASE=/path/to/pipeline

# Comma-separated list of paths the file browser can access
ALLOWED_PATHS=/data,/media

# Dashboard password
DASHBOARD_PASSWORD=changeme

# Dashboard port
DASHBOARD_PORT=5001

# rclone remote and destination path (must be configured via `rclone config`)
RCLONE_REMOTE=pcloud:/Auto-Uploads

# User/Group IDs for Docker containers
PUID=0
PGID=0
TZ=Europe/London
